#!/bin/bash

CREATED_FAVICON=0

PORT=${1:-8000}
shift

if [ ! -e "favicon.ico" ]; then
    
    echo "$favicon" | base64 --decode > favicon.ico
    CREATED_FAVICON=1
    shift
fi

trap _ctrl_c INT

_ctrl_c() {
    echo -e "\n********************"
    echo -e "** Trapped CTRL-C **"
    echo -e "**   Please wait  **"
    echo -e "********************\n"
    [ "$CREATED_FAVICON" = 1 ] && rm favicon.ico
}

NS1_1=$(`which my_ip` lo)
NS1_2=$(`which my_ns` lo)
NS2_1=$(`which my_ip`)
NS2_2=$(`which my_ns`)

cat <<EOF
------------------------------
US
More options:
 python3 -m http.server --help

Start in browser:
 http://$NS1_1:$PORT
 http://$NS1_2:$PORT
 http://$NS2_1:$PORT
 http://$NS2_2:$PORT
------------------------------

EOF

python3 -m http.server $PORT $@
